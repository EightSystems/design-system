    "scripts": {
        "storybook": "start-storybook -p 6006",
        "build:storybook": "build-storybook",
        "prebuild": "rm -rf dist/ && rm -rf mobile/",
        "cleanup:web": "cd dist/components && find . -name '*.native.d.ts' | xargs rm",
        "cleanup:mobile": "cd mobile/components && find . -type f ! -name '*.native.d.ts' | xargs rm",
        "build:web": "rollup -c && copyfiles -u 1 src/assets/**/* dist/",
        "build:mobile": "tsc --project tsconfig.native.json && copyfiles -u 1 src/assets/**/* mobile/",
        "build": "yarn prebuild && yarn build:web && yarn build:mobile",
        "publish:local": "yarn build && yalc publish --files --no-scripts",
        "publish:npm": "yarn semantic-release",
        "postinstall": "rm -rf node_modules/plyr-react/node_modules/plyr"
    }
