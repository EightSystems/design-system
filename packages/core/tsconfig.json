{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "jsx": "react",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "importHelpers": false,
    }
}
